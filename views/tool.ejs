        if (!frankfurterData.rates || !frankfurterData.rates[toCurrency]) {
            throw new Error('Invalid response format from Frankfurter API');
        }

        const rate = frankfurterData.rates[toCurrency];
        const convertedAmount = amount * rate;

        // Update UI with Frankfurter data
        updateConversionUI(amount, fromCurrency, toCurrency, rate, convertedAmount, frankfurterData.date);
        
    } catch (frankfurterError) {
        console.error('Frankfurter API error:', frankfurterError);
        
        try {
            // Fallback to ExchangeRate-API
            const exchangeRateResponse = await fetch(`https://v6.exchangerate-api.com/v6/d77872369a1e1d375d7f989e/pair/${fromCurrency}/${toCurrency}`);
            
            if (!exchangeRateResponse.ok) {
                throw new Error(`ExchangeRate-API error: ${exchangeRateResponse.status} ${exchangeRateResponse.statusText}`);
            }

            const exchangeRateData = await exchangeRateResponse.json();

            if (exchangeRateData.result !== "success" || !exchangeRateData.conversion_rate) {
                throw new Error('Invalid response format from ExchangeRate-API');
            }

            const rate = exchangeRateData.conversion_rate;
            const convertedAmount = amount * rate;

            // Update UI with ExchangeRate-API data
            updateConversionUI(amount, fromCurrency, toCurrency, rate, convertedAmount, new Date(exchangeRateData.time_last_update_utc).toISOString().split('T')[0]);
            
        } catch (exchangeRateError) {
            console.error('ExchangeRate-API error:', exchangeRateError);
            
            // Handle specific error cases
            if (frankfurterError.message.includes('Failed to fetch') || exchangeRateError.message.includes('Failed to fetch')) {
                errorMessage.textContent = 'Network error. Please check your connection.';
            } else if (frankfurterError.message.includes('API error') || exchangeRateError.message.includes('API error')) {
                errorMessage.textContent = 'Service temporarily unavailable. Please try again later.';
            } else {
                errorMessage.textContent = 'Error converting currency. Please try again.';
            }

            errorMessage.style.display = 'block';
            resultContainer.style.display = 'none';
        }
    }
}



