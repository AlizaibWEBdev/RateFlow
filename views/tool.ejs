                                const toCurrency = toCurrencySelect.value;

                                if (isNaN(amount)) {
                                        errorMessage.textContent = 'Please enter a valid amount';
                                        errorMessage.style.display = 'block';
                                        resultContainer.style.display = 'none';
                                        return;
                                }

                                if (amount <= 0) {
                                        errorMessage.textContent = 'Amount must be greater than zero';
                                        errorMessage.style.display = 'block';
                                        resultContainer.style.display = 'none';
                                        return;
                                }

                                errorMessage.style.display = 'none';

                                try {
                                        // Show loading state
                                        conversionRate.textContent = 'Loading rates...';
                                        resultContainer.style.display = 'block';

                                        const response = await fetch(`https://api.frankfurter.app/latest?from=${fromCurrency}&to=${toCurrency}`);

                                        if (!response.ok) {
                                                throw new Error(`API error: ${response.status} ${response.statusText}`);
                                        }

                                        const data = await response.json();

                                        if (!data.rates || !data.rates[toCurrency]) {
                                                throw new Error('Invalid response format from API');
                                        }

                                        const rate = data.rates[toCurrency];
                                        const convertedAmount = amount * rate;

                                        // Update UI
                                        convertedAmountInput.value = convertedAmount.toFixed(4);
                                        conversionRate.textContent = `1 ${fromCurrency} = ${rate.toFixed(6)} ${toCurrency}`;
                                        conversionResult.textContent = `${amount.toFixed(2)} ${fromCurrency} = ${convertedAmount.toFixed(2)} ${toCurrency}`;
                                        conversionDate.textContent = `Exchange rate as of ${new Date(data.date).toLocaleDateString()}`;

                                        resultContainer.style.display = 'block';

                                } catch (error) {
                                        console.error('Currency conversion error:', error);

                                        // Handle specific error cases
                                        if (error.message.includes('Failed to fetch')) {
                                                errorMessage.textContent = 'Network error. Please check your connection.';
                                        } else if (error.message.includes('API error')) {
                                                errorMessage.textContent = 'Service temporarily unavailable. Please try again later.';
                                        } else {
                                                errorMessage.textContent = 'Error converting currency. Please try again.';
                                        }

                                        errorMessage.style.display = 'block';
                                        resultContainer.style.display = 'none';
                                }
                        }

                        function swapCurrencies() {
                                const tempCurrency = fromCurrencySelect.value;
                                fromCurrencySelect.value = toCurrencySelect.value;
                                toCurrencySelect.value = tempCurrency;

                                updateFlags();
                                convertCurrency();
                        }

                        // Event listeners
                        amountInput.addEventListener('input', convertCurrency);
                        fromCurrencySelect.addEventListener('change', () => {
                                updateFlags();
                                convertCurrency();
                        });
                        toCurrencySelect.addEventListener('change', () => {
                                updateFlags();
                                convertCurrency();
                        });
                        swapBtn.addEventListener('click', swapCurrencies);

                        // Initialize
                        populateCurrencyDropdowns();
                        convertCurrency();
                });
        </script>
