                        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                }

                .logo {
                        font-size: 1.8rem;
                        font-weight: 700;
                        color: var(--light);
                        text-decoration: none;
                        display: flex;
                        align-items: center;
                        gap: 0.5rem;
                }

                .logo span {
                        color: var(--primary);
                }

                main {
                        padding: 3rem 0;
                }

                h1 {
                        font-size: 2.5rem;
                        margin-bottom: 1.5rem;
                        text-align: center;
                        background: linear-gradient(to right, var(--primary), var(--light));
                        -webkit-background-clip: text;
                        -webkit-text-fill-color: transparent;
                }

                .subtitle {
                        color: var(--gray);
                        text-align: center;
                        max-width: 700px;
                        margin: 0 auto 3rem;
                        font-size: 1.1rem;
                }

                .converter-container {
                        background: var(--darker);
                        border-radius: 1rem;
                        padding: 2rem;
                        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
                        margin-bottom: 3rem;
                        border: 1px solid rgba(255, 255, 255, 0.05);
                        transition: all 0.3s ease;
                }

                .converter-container:hover {
                        transform: translateY(-5px);
                        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
                }

                .converter-header {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        margin-bottom: 1.5rem;
                }

                .converter-title {
                        font-size: 1.3rem;
                        font-weight: 600;
                }

                .last-updated {
                        color: var(--gray);
                        font-size: 0.9rem;
                }

                .converter-grid {
                        display: grid;
                        grid-template-columns: 1fr 1fr;
                        gap: 1.5rem;
                }

                @media (max-width: 768px) {
                        .converter-grid {
                                grid-template-columns: 1fr;
                        }
                }

                .input-group {
                        position: relative;
                }

                .input-group label {
                        display: block;
                        margin-bottom: 0.5rem;
                        color: var(--gray);
                        font-size: 0.9rem;
                }

                .currency-input {
                        position: relative;
                }

                .currency-input input {
                        width: 100%;
                        padding: 1rem 1rem 1rem 3.5rem;
                        background: var(--dark);
                        border: 1px solid rgba(255, 255, 255, 0.1);
                        border-radius: 0.5rem;
                        color: var(--light);
                        font-size: 1.1rem;
                        transition: all 0.3s ease;
                }

                .currency-input input:focus {
                        outline: none;
                        border-color: var(--primary);
                        box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.3);
                }

                .currency-flag {
                        position: absolute;
                        left: 1rem;
                        top: 50%;
                        transform: translateY(-50%);
                        display: flex;
                        align-items: center;
                        gap: 0.5rem;
                }

                .currency-select {
                        position: relative;
                        margin-top: 0.5rem;
                }

                .currency-select select {
                        width: 100%;
                        padding: 1rem 1rem 1rem 3.5rem;
                        background: var(--dark);
                        border: 1px solid rgba(255, 255, 255, 0.1);
                        border-radius: 0.5rem;
                        color: var(--light);
                        font-size: 1rem;
                        appearance: none;
                        cursor: pointer;
                        transition: all 0.3s ease;
                }

                .currency-select select:focus {
                        outline: none;
                        border-color: var(--primary);
                        box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.3);
                }

                .currency-select .fi {
                        position: absolute;
                        left: 1rem;
                        top: 50%;
                        transform: translateY(-50%);
                        font-size: 1.2rem;
                }

                .currency-select::after {
                        content: 'â–¼';
                        position: absolute;
                        right: 1rem;
                        top: 50%;
                        transform: translateY(-50%);
                        color: var(--gray);
                        font-size: 0.7rem;
                        pointer-events: none;
                }

                .swap-btn {
                        position: absolute;
                        left: 50%;
                        top: 50%;
                        transform: translate(-50%, -50%);
                        background: var(--primary);
                        color: white;
                        border: none;
                        width: 3rem;
                        height: 3rem;
                        border-radius: 50%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        cursor: pointer;
                        z-index: 10;
                        transition: all 0.3s ease;
                        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                }

                .swap-btn:hover {
                        background: var(--primary-dark);
                        transform: translate(-50%, -50%) scale(1.1);
                }

                .swap-btn i {
                        font-size: 1.2rem;
                }

                .result-container {
                        margin-top: 2rem;
                        padding: 1.5rem;
                        background: var(--dark);
                        border-radius: 0.5rem;
                        border-left: 4px solid var(--primary);
