                    <a href="/privacy">Privacy Policy</a>
                    <a href="/contact">Contact</a>
                </div>
                <div class="footer-copyright">© 2025 RateFlow. All rights reserved.</div>
            </div>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set current date for last updated
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            const currentDate = new Date().toLocaleDateString('en-US', options);
            document.getElementById('last-updated-date').textContent = currentDate;
            document.getElementById('policy-date').textContent = currentDate;
        });
    </script>
